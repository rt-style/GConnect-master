<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/extra_background_test"
    tools:context=".ToSeeConnectedUsersProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fullNameConnectedUser"
            android:layout_width="289dp"
            android:layout_height="66dp"
            android:background="@color/white"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="@string/conn_users_fName"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/ageConnectedUser"
            android:layout_width="289dp"
            android:layout_height="66dp"
            android:background="@color/ic_launcher_background"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="@string/conn_users_age"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/highestQualificationConnectedUser"
            android:layout_width="289dp"
            android:layout_height="66dp"
            android:background="@color/ic_launcher_background"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="@string/conn_users_qualification"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/userNameConnectedUser"
            android:layout_width="282dp"
            android:layout_height="54dp"
            android:background="@color/ic_launcher_background"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="@string/conn_users_uName"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/emailConnectedUser"
            android:layout_width="289dp"
            android:layout_height="66dp"
            android:background="@color/ic_launcher_background"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="@string/conn_users_email"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />


        <TextView
            android:id="@+id/skillsConnectedUser"
            android:layout_width="289dp"
            android:layout_height="66dp"
            android:background="@color/ic_launcher_background"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="@string/conn_users_skills"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView16"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/addressConnectedUser"
            android:layout_width="288dp"
            android:layout_height="66dp"
            android:background="@color/ic_launcher_background"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="@string/conn_users_address"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <TextView
            android:id="@+id/contactConnectedUser"
            android:layout_width="288dp"
            android:layout_height="66dp"
            android:layout_marginBottom="16dp"
            android:background="@color/ic_launcher_background"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="@string/conn_users_contact"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_ConnectedUser_profile_picture"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_launcher_profile_picture_round"
            app:civ_border_width="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_profile_picture_round" />

        <TextView
            android:id="@+id/headlineConnectedUser"
            android:layout_width="184dp"
            android:layout_height="42dp"
            android:layout_marginStart="20dp"
            android:lines="4"
            android:text="Headline "
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toEndOf="@+id/imageview_ConnectedUser_profile_picture"
            app:layout_constraintTop_toTopOf="@+id/imageview_ConnectedUser_profile_picture" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/conn_users_fName"
            android:textColor="#0C0303"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_ConnectedUser_profile_picture" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/conn_users_uName"
            android:textColor="#0E0A0A"
            app:layout_constraintStart_toStartOf="@+id/fullNameConnectedUser"
            app:layout_constraintTop_toBottomOf="@+id/fullNameConnectedUser" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/conn_users_email"
            android:textColor="#090202"
            app:layout_constraintStart_toStartOf="@+id/userNameConnectedUser"
            app:layout_constraintTop_toBottomOf="@+id/userNameConnectedUser" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/conn_users_age"
            android:textColor="#050101"
            app:layout_constraintStart_toStartOf="@+id/emailConnectedUser"
            app:layout_constraintTop_toBottomOf="@+id/emailConnectedUser" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/conn_users_qualification"
            android:textColor="#070404"
            app:layout_constraintStart_toStartOf="@+id/skillsConnectedUser"
            app:layout_constraintTop_toBottomOf="@+id/skillsConnectedUser" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="173dp"
            android:layout_height="16dp"
            android:text="@string/conn_users_skills"
            android:textColor="#050303"
            app:layout_constraintStart_toStartOf="@+id/ageConnectedUser"
            app:layout_constraintTop_toBottomOf="@+id/ageConnectedUser" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/conn_users_address"
            android:textColor="#020101"
            app:layout_constraintStart_toStartOf="@+id/highestQualificationConnectedUser"
            app:layout_constraintTop_toBottomOf="@+id/highestQualificationConnectedUser" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/conn_users_contact"
            android:textColor="#0E0606"
            app:layout_constraintStart_toStartOf="@+id/addressConnectedUser"
            app:layout_constraintTop_toBottomOf="@+id/addressConnectedUser" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>