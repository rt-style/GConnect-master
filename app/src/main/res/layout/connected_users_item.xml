<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/extra_background_test">

        <ImageView
            android:id="@+id/imageViewCU"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_person_image_foreground" />

        <TextView
            android:id="@+id/fullNameCU"
            android:layout_width="211dp"
            android:layout_height="40dp"
            android:text="@string/conn_users_item1"
            android:textColor="#CD1D1D"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewCU"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewCU"
            app:layout_constraintTop_toTopOf="@+id/imageViewCU" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>