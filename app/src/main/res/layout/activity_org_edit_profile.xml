<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/extra_background_test"
    tools:context=".OrgEditProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_orgedit_profile_picture"
        android:layout_width="90dp"
        android:layout_height="82dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_launcher_profile_picture_round"
        app:civ_border_width="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_profile_picture_round" />


    <EditText
        android:id="@+id/org_edit_headlineMP"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="@string/edit_org_headline"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_orgedit_profile_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageview_orgedit_profile_picture"
        app:layout_constraintTop_toTopOf="@+id/imageview_orgedit_profile_picture" />

    <EditText
        android:id="@+id/orgEditNameMP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/ic_launcher_background"
        android:clickable="true"
        android:elevation="4dp"
        android:padding="20dp"
        android:text="@string/edit_org_name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/orgEditAddressMP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ic_launcher_background"
        android:clickable="true"
        android:elevation="4dp"
        android:padding="20dp"
        android:text="@string/edit_org_address"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/orgEditEmailMP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/ic_launcher_background"
        android:clickable="true"
        android:elevation="4dp"
        android:padding="20dp"
        android:text="@string/edit_org_email"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/edit_org_address"
        android:textColor="#090202"
        app:layout_constraintStart_toStartOf="@+id/orgEditEmailMP"
        app:layout_constraintTop_toBottomOf="@+id/orgEditEmailMP" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/edit_org_name"
        android:textColor="#050101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_orgedit_profile_picture" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/edit_org_email"
        android:textColor="#070404"
        app:layout_constraintStart_toStartOf="@+id/orgEditNameMP"
        app:layout_constraintTop_toBottomOf="@+id/orgEditNameMP" />

    <Button
        android:layout_width="206dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:onClick="saveOrgChangesClick"
        android:text="@string/edit_org_saveButton"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orgEditAddressMP" />

</androidx.constraintlayout.widget.ConstraintLayout>